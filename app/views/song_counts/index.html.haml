= render 'shared/page_per_year'

#main.row-fluid
  = text_field_tag('q', nil,
    placeholder: I18n.t('song_census_evaluation.verein.search'),
      data: { provide: 'entity',
        updater: 'Songs.update',
          url: songs_path(format: :json) })

  = form_for([parent, parent.song_counts.build(year: year)], remote: true) do |f|
    = f.hidden_field :song_id
    = f.hidden_field :year

  #song_counts
    = render 'list', list: @list
